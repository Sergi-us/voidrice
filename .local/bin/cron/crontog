#!/bin/sh
# SARBS 07.07.2024
# Schaltet alle Cronjobs aus/ein.
# Speichert deaktivierte Crontabs in ~/.config/cronsaved bis zur Wiederherstellung.

([ -f "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved ] && crontab - < "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved  && rm "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved && notify-send "ðŸ•“ Cronjobs wieder aktiviert.") || ( crontab -l > "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved && crontab -r && notify-send "ðŸ•“ Cronjobs gespeichert und deaktiviert.")


# Toggles all cronjobs off/on.
# Stores disabled crontabs in ~/.config/cronsaved until restored.

#([ -f "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved ] && crontab - < "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved  && rm "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved && notify-send "ðŸ•“ Cronjobs re-enabled.") || ( crontab -l > "${XDG_CONFIG_HOME:-$HOME/.config}"/cronsaved && crontab -r && notify-send "ðŸ•“ Cronjobs saved and disabled.")
