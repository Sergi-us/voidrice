#!/bin/sh

# Erhalte ein Einmalpasswort oder fÃ¼ge ein OTP-Geheimnis zu deinem pass-otp-Speicher hinzu.

ifinstalled pass pass-otp || exit 1

dir="${PASSWORD_STORE_DIR}"

choice="$({ echo "ðŸ†•add" ; echo "ðŸ•™sync-time" ; ls "$dir"/*-otp.gpg ;} | sed "s/.*\///;s/-otp.gpg//" | dmenu -p "WÃ¤hle ein 2FA:")"

case $choice in
	ðŸ†•add )
		ifinstalled maim zbar || exit 1

		temp=$(mktemp -p "$XDG_RUNTIME_DIR" --suffix=.png)
		otp="otp-test-script"
		trap 'rm -f $temp; pass rm -f $otp' HUP INT QUIT TERM PWR EXIT

		notify-send "Scanne das Bild." "Scanne den OTP-QR-Code."

		maim -s "$temp" || exit 1
		info="$(zbarimg -q "$temp")"
		info="${info#QR-Code:}"

		if echo "$info" | pass otp insert "$otp"; then
			while true ; do
				export name="$(echo | dmenu -p "Gib diesem Einmalpasswort einen ein-Wort-Namen:")"
				echo "$name" | grep -q -- "^[A-z0-9-]\+$" && break
			done
			pass mv "$otp" "$name-otp"
			notify-send "Erfolgreich hinzugefÃ¼gt." "$name-otp wurde erstellt."
		else
			notify-send "Keine OTP-Daten gefunden." "Versuche das Bild erneut genauer zu scannen."
		fi
		;;
	ðŸ•™sync-time )
		ifinstalled ntp || exit 1
		notify-send -u low "ðŸ•™ Zeit synchronisieren..." "Zeit mit entfernten NTP-Servern synchronisieren..."
		updatedata="$(sudo ntpdate pool.ntp.org)" &&
		notify-send -u low "ðŸ•™ Zeit synchronisieren..." "Fertig. Zeit geÃ¤ndert um ${updatedata#*offset }"
		;;
	*) pass otp -c ${choice}-otp ;;
esac
