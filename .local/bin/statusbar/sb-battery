#!/bin/sh
# Angepasst am 11.10.2024
# Zeigt den Batteriestand mit Symbolen entsprechend dem Ladestand und dem Anschlussstatus an
# TODO Spaltenabstand verringern



adjust_brightness() {
    tool=""
    if command -v brightnessctl &> /dev/null; then
        tool="brightnessctl"
    elif command -v xbacklight &> /dev/null; then
        tool="xbacklight"
    else
        notify-send "âš ï¸ Kein Helligkeitstool gefunden"
        exit 1
    fi

    case $1 in
        inc)
            if [ "$tool" = "brightnessctl" ]; then
                brightnessctl set +5%
            else
                xbacklight -inc 10
            fi
            ;;
        dec)
            if [ "$tool" = "brightnessctl" ]; then
                brightnessctl set 5%-
            else
                xbacklight -dec 10
            fi
            ;;
        *)
            notify-send "âš ï¸  UngÃ¼ltige Operation"
            exit 1
            ;;
    esac
}

case $BLOCK_BUTTON in
    3) notify-send "ğŸ”‹ Batteriemodul" "ğŸ”‹ Status:
ó°š¥ Am LadegerÃ¤t
â— Akku schwach (<20â€¯%)
- Scrollen, um Helligkeit zu Ã¤ndern." ;;
    4)
        # ErhÃ¶hung der Helligkeit um 10â€¯%
        adjust_brightness inc
        ;;
    5)
        # Verringerung der Helligkeit um 10â€¯%
        adjust_brightness dec
        ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Funktion zur Bestimmung des Batterie-Symbols basierend auf dem Ladestand
get_battery_symbol() {
    capacity=$1

    if [ "$capacity" -le 10 ]; then
        echo "ó°‚ƒ"  # Batterie 10â€¯%
    elif [ "$capacity" -le 20 ]; then
        echo "ó°º"  # Batterie 20â€¯%
    elif [ "$capacity" -le 30 ]; then
        echo "ó°»"  # Batterie 30â€¯%
    elif [ "$capacity" -le 40 ]; then
        echo "ó°¼"  # Batterie 40â€¯%
    elif [ "$capacity" -le 50 ]; then
        echo "ó°½"  # Batterie 50â€¯%
    elif [ "$capacity" -le 60 ]; then
        echo "ó°¾"  # Batterie 60â€¯%
    elif [ "$capacity" -le 70 ]; then
        echo "ó°¿"  # Batterie 70â€¯%
    elif [ "$capacity" -le 80 ]; then
        echo "ó°‚€"  # Batterie 80â€¯%
    elif [ "$capacity" -le 90 ]; then
        echo "ó°‚"  # Batterie 90â€¯%
    else
        echo "ó°‚‚"  # Batterie voll
    fi
}

# Funktion zur Bestimmung des Anschlussstatus (LadegerÃ¤t angeschlossen oder nicht)
get_connection_status() {
    # PrÃ¼fe, ob das System an AC-Strom angeschlossen ist
    for ac in /sys/class/power_supply/AC* /sys/class/power_supply/Mains; do
        [ -e "$ac/online" ] || continue
        if [ "$(cat "$ac/online")" -eq 1 ]; then
            echo "AC"  # LadegerÃ¤t angeschlossen
            return
        fi
    done
    echo "BAT"  # Batteriebetrieb
}

# Loop durch alle angeschlossenen Batterien und formatiere die Infos
output=""
for battery in /sys/class/power_supply/BAT?*; do
    [ -d "$battery" ] || continue
    capacity=$(cat "$battery/capacity" 2>/dev/null)

    symbol=$(get_battery_symbol "$capacity")

    # Warnung bei niedrigem Akkustand
    if [ "$capacity" -le 20 ]; then
        warn="â—"
    else
        warn=""
    fi

    # Anschlussstatus ermitteln
    connection_status=$(get_connection_status)
    if [ "$connection_status" = "AC" ]; then
        # Verwende ein Symbol fÃ¼r angeschlossenes LadegerÃ¤t
        # Vorschlag: "ó°š¥" (Steckersymbol) oder "ïƒ§" (Blitzsymbol)
        connection_symbol="ó°š¥"
    else
        connection_symbol=""
    fi

    # Ausgabe zusammenstellen
    # Um den Prozentwert auszublenden, kannst du "$capacity%" entfernen oder auskommentieren
    output="$output $connection_symbol$warn $capacityó±‰¸ $symbol"
done

# Ausgabe drucken
echo "|$output"

thin_space=$'\u2009'
hair_space=$'\u200A'
six_space=$'\u2006'
