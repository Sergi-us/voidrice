	1) notify-send "Dieser Monat" "$(cal | sed "s/\<$(date +'%e'|tr -d ' ')\>/<b><span color='red'>&<\/span><\/b>/")" && notify-send "Termine" "$(calcurse -d30)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send "üìÖ Zeit-/Datumsmodul" "\- Linksklick, um bevorstehende Termine f√ºr die n√§chsten drei Tage mit \`calcurse -d3\` anzuzeigen und den Monat mit \`cal\` anzuzeigen
- Mittelklick √∂ffnet calcurse, falls installiert" ;;
